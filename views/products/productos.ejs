Â«<!DOCTYPE html>
<html lang="es">

<!-- Include Head -->
<%- include("../partials/head", {title: productos.name}) %>

<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>
		
			<% for (let p of productos) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%=p.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%=productos.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$ <%=productos.price %></h2>
								<span> <%=productos.discount %>% OFF</span>
								<p><%=productos.name %></p>
							</article>
						</a>
					</section>
				</div>
            <% } %>
		
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>