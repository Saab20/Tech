<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head", {title: 'Editar Producto'}) %>  
</head>


<body>

    <!--MENU-->
    <header>
        <%- include("../partials/header") %>
    </header>
    <!--MENU-->

    <div class="container products-wrapper mt-5 form">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar Producto</h2>
			</div>
		</div>
		<div class="col-12">
			<form action="#"   method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" value="" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" value="" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" value="" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<option value="electrodomesticos">Electrodomesticos</option>
							<option value="computacion" >Computacion</option>
                            <option value="smartphones" >Smartphones</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" value="" class="form-input"></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="button-compra">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>

      <!--FOOTER-->
    

    <%- include("../partials/footer") %>  
  
    
    <!--FOOTER-->

</body>

</html>